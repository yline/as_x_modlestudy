            android:textColor="@drawable/color_label_text"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bg_label_normal"
            android:text="Brand-new World"
            android:textColor="@drawable/color_label_text"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bg_label_normal"
            android:text="Save you from anything"
            android:textColor="@drawable/color_label_text"
            android:textSize="13sp"/>
    </com.layout.label.view.labellayout.FlowLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="gravity:right"/>

    <com.layout.label.view.labellayout.FlowLayout
        android:id="@+id/right_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
