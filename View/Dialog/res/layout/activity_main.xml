<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_buttondialog_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="两个按钮，类型" />

        <Button
            android:id="@+id/btn_buttondialog_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="三个按钮，类型" />

        <Button
            android:id="@+id/btn_listdialog_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="列表，选择" />

        <Button
            android:id="@+id/btn_listdialog_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="列表，单选" />

        <Button
            android:id="@+id/btn_listdialog_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="列表，多选" />

        <Button
            android:id="@+id/btn_progressdialog_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="进度条，直线" />

        <Button
            android:id="@+id/btn_progressdialog_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进度环，环形" />

        <Button
            android:id="@+id/btn_customdialog_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="自定义，提示" />

        <Button
            android:id="@+id/btn_customdialog_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义，用户自定义" />
    </LinearLayout>

</ScrollView>