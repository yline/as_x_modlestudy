<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/widget_dialog_ios_bg"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_dialog_foot_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="1"
            android:textAllCaps="false"
            android:textColor="@android:color/black"/>

        <View
            android:id="@+id/view_dialog_foot_one"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray">
        </View>

        <Button
            android:id="@+id/btn_dialog_foot_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="2"
            android:textAllCaps="false"
            android:textColor="@android:color/black"/>

        <View
            android:id="@+id/view_dialog_foot_two"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray">
        </View>

        <Button
            android:id="@+id/btn_dialog_foot_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="3"
            android:textAllCaps="false"
            android:textColor="@android:color/black"/>

        <View
            android:id="@+id/view_dialog_foot_three"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray">
        </View>

        <Button
            android:id="@+id/btn_dialog_foot_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="4"
            android:textAllCaps="false"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_dialog_foot_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_dialog_ios_bg"
        android:text="取消"
        android:textColor="@android:color/darker_gray"/>
</LinearLayout>